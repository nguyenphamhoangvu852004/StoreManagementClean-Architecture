package com.example.ui.GetProductDetailInfoMVVP;

import javax.swing.*;

public class GetProductDetailInfoView {

    private JFrame frame;
    private JPanel formPanel;
    private JTextField maHangField, tenHangField, soLuongTonField, donGiaField;
    private JTextField thoiGianBaoHanhField, congSuatField;
    private JTextField ngaySanXuatField, ngayHetHanField, nhaCungCapField;
    private JTextField nhaSanXuatField, ngayNhapKhoField;


    public void setProductDetails(String maHang, String tenHang, int soLuongTon, double donGia) {
        maHangField.setText(maHang);
        tenHangField.setText(tenHang);
        soLuongTonField.setText(String.valueOf(soLuongTon));
        donGiaField.setText(String.valueOf(donGia));
    }
}
